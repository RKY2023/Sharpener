<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie-edge">
        <title> Expense Tracker</title>
        <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script> -->
    </head>
    <body>
        <div class="container my-5" style="width: 50%">
            <form action="/expense" method="post">
                <h1>Expense Tracker</h1>
                <h6>Enter your expenses below:</h6>
                <hr>
                <label>Expense category:</label>
                <br/>
                <input type="text" id="exp_cat" name="exp_cat" required>
                <br/>
                <label>Expense Amount:</label>
                <br/>
                <input type="number" id="exp_amt" name="exp_amt" required>
                <br/>
                <label>Expense Description:</label>
                <br/>
                <input type="text" id="exp_desc" name="exp_desc" required>
                <br/>
                <button type="submit" id="exp_adder" class="btn btn-success mt-2">Add</button>
            </form>
        </div>
        <% if (expenses.length > 0) { %>
        <div>
            <table>
                <thead>
                    <th>id</th>
                    <th>category</th>
                    <th>amount</th>
                    <th>description</th>
                    <th>action</th>
                </thead>
                <tbody>
                    <% for (let expense of expenses) { %> 
                    <tr>
                        <td><%= expense.id %></td>
                        <td><%= expense.category%></td>
                        <td><%= expense.amount %></td>
                        <td><%= expense.description %></td>
                        <td>
                            <form action="/expense/edit?expenseId=<%= expense.id %>" method="post">
                                <button type="submit">Edit</button>
                                <input type="hidden" name="expenseId" value="<%= expense.id %>" >
                            </form>
                            <form action="/expense/delete" method="post">
                                <button type="submit">delete</button>
                                <input type="hidden" name="expenseId" value="<%= expense.id %>" >
                            </form>
                        </td>
                    </tr>
                    <%} %>
                </tbody>
            </table>
        </div>
        <% } %>
    </body>
</html>